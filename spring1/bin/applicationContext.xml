<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   ">
	<bean id="greetingService" class="com.GreetingService"><!-- 这个id官方推荐使用类名且首字母小写 -->
		<property name="greeting">
		<value>hello world</value>
		</property><!-- 注意标签的包含关系！！你写错了就会报各种不知名的错误 -->
	
		<property name="greeting2">
		<value>hello world greeting2</value>
		</property>
		
		<property name="bs" ref="beyService"/> <!-- 文件之间的依赖关系！！这是直接调用了下面的id里的属性了，所以也就是value默认为later了 -->
		
	</bean>
	<bean id="beyService" class="com.BeyService">
		<property name="bye" value="later"/> <!-- 两种方式使用标签 -->
		
		
	</bean>

</beans>