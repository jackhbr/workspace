<?xml version="1.0"?>
<!-- spring的根元素为beans -->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance http://www.springmodules.org/schema/cache/springmodules-cache.xsd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	<bean id="greetingService" class="com.GreetingService"><!-- 这个id官方推荐使用类名且首字母小写 -->
		<property name="greeting"></property>
		<value>hello world</value>
	</bean>

</beans>